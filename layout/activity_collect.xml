<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbb"
    tools:context=".Collect">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginBottom="545dp"
        android:text="Collect Form"
        android:textColor="#ffffff"
        android:textSize="27dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fulname"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="441dp"
        android:textColorHint="#FBFBFB"
        android:textColor="#FBFBFB"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/con"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="357dp"
        android:textColorHint="#FBFBFB"
        android:textColor="#FBFBFB"
        android:ems="10"
        android:hint="Contact Number"
        android:inputType="number" />


    <AutoCompleteTextView
        android:id="@+id/spinner"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="271dp"
        android:textColorHint="#FBFBFB"
        android:textColor="#FBFBFB"
        android:hint="Type"></AutoCompleteTextView>

    <ImageView
        android:id="@+id/imagevieww"
        android:layout_width="34dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="282dp"
        android:padding="5dp"
        android:visibility="visible"
        app:srcCompat="@drawable/dropdown"
        tools:ignore="VectorDrawableCompat"
        tools:visibility="visible" />

    <Button
        android:id="@+id/cont"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="119dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="167dp"
        android:text="Continue" />


</RelativeLayout>